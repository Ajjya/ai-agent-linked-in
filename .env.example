# Environment Variables (copy to .env and fill with your values)

# Application settings
NODE_ENV=development
PORT=3000
APP_NAME="LinkedIn MongoDB Agent"

# LinkedIn API credentials (get from LinkedIn Developer Portal)
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# OpenAI API credentials (for content generation with ChatGPT)
OPENAI_API_KEY=your_openai_api_key_here
# Available models: gpt-4, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-3.5-turbo

# Posting schedule (days: 0=Sunday, 1=Monday, ..., 6=Saturday)
POSTING_DAYS=2,5
# Time in format HH:mm (24-hour format)
POSTING_TIME=10:30
# Timezone (IANA timezone identifier)
TIMEZONE=Europe/Lisbon

# MongoDB RSS feed URL
MONGODB_RSS_URL=https://www.mongodb.com/blog/rss.xml

# Database (SQLite file path for local development)
DATABASE_URL=file:./dev.db

# Web panel settings
ENABLE_WEB_PANEL=true
WEB_PANEL_PORT=3000

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# LinkedIn profile/company settings
# For personal profile posts (current setup)
LINKEDIN_PROFILE_ID=your_profile_id
# For future company page posts (when you get admin access)
LINKEDIN_COMPANY_ID=mongodbinc

# Post content settings
MAX_POST_LENGTH=3000
INCLUDE_IMAGES=true
POST_LANGUAGE=en